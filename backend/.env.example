# Application Settings
APP_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# OpenRouter API Settings
OPENROUTER__API_KEY=your_openrouter_api_key_here
OPENROUTER__MODEL_NAME=openai/gpt-4o
OPENROUTER__BASE_URL=https://openrouter.ai/api/v1
OPENROUTER__EMBEDDING_MODEL_NAME=openai/text-embedding-3-small

# Database Settings
# Use 'sqlite' for local development, 'postgresql' for production
DATABASE__TYPE=sqlite
DATABASE__URL=sqlite:///./personamirror.db

# PostgreSQL Settings (only used when DATABASE__TYPE=postgresql)
POSTGRESQL__HOST=localhost
POSTGRESQL__DATABASE=personamirror
POSTGRESQL__USERNAME=postgres
POSTGRESQL__PASSWORD=your_postgres_password
POSTGRESQL__PORT=5432
POSTGRESQL__SSL_MODE=prefer
POSTGRESQL__DB_SCHEMA=public

# Logging Configuration
LOG__LOGS_DIR=logs
LOG__LOG_LEVEL=DEBUG
