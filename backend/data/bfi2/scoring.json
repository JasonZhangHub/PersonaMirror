                "max": 3.5,
                "label": "Average"
            },
            "high": {
                "min": 3.5,
                "max": 4.0,
                "label": "High"
            },
            "veryHigh": {
                "min": 4.0,
                "max": 5.0,
                "label": "Very High"
            }
        }
    },
    "algorithm": {
        "steps": [
            "1. Collect responses (1-5) for all 60 items",
            "2. For each reverse-scored item, apply: scoredValue = 6 - rawResponse",
            "3. For domain scores: sum all 12 items and divide by 12",
            "4. For facet scores: sum all 4 items and divide by 4",
            "5. Round to 2 decimal places for display"
        ],
        "pseudocode": {
            "reverseScore": "function reverseScore(response, isReverse) { return isReverse ? 6 - response : response; }",
            "calculateMean": "function calculateMean(items) { return items.reduce((a, b) => a + b, 0) / items.length; }",
            "calculateDomain": "function calculateDomain(responses, domainConfig) { const scored = domainConfig.items.map(id => reverseScore(responses[id], domainConfig.reverseItems.includes(id))); return calculateMean(scored); }"
        }
    }
