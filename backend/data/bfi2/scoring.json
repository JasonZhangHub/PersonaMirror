    "scoring": {
        "domainScore": {
            "description": "Calculate the mean of all 12 items (after reverse scoring) for each domain",
            "formula": "sum(scoredItems) / 12",
            "range": {
                "min": 1,
                "max": 5
            }
        },
        "facetScore": {
            "description": "Calculate the mean of all 4 items (after reverse scoring) for each facet",
            "formula": "sum(scoredItems) / 4",
            "range": {
                "min": 1,
                "max": 5
            }
        }
    },
    "interpretation": {
        "description": "Score interpretation guidelines",
        "ranges": {
            "veryLow": {
                "min": 1.0,
                "max": 2.0,
                "label": "Very Low"
            },
            "low": {
                "min": 2.0,
                "max": 2.5,
                "label": "Low"
            },
            "average": {
